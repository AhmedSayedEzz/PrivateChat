<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/request_user_img"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/user"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="DisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:id="@+id/request_user_name"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignTop="@+id/request_user_img"
        android:layout_toRightOf="@+id/request_user_img"
        android:layout_toEndOf="@+id/request_user_img" />

    <TextView
        android:text="User Defualt Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/request_single_status"
        android:layout_below="@+id/request_user_name"
        android:layout_alignLeft="@+id/request_user_name"
        android:layout_alignStart="@+id/request_user_name"
        android:layout_marginRight="10dp" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_request_btn"
        android:background="#F23F3F"
        android:textColor="@android:color/white"

        android:layout_alignBaseline="@+id/accept_request_btn"
        android:layout_toRightOf="@+id/accept_request_btn"
        android:layout_marginLeft="20dp" />

    <Button
        android:text="Accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accept_request_btn"
        android:background="#32C75E"
        android:textColor="@android:color/white"
        android:layout_below="@+id/request_user_img"
        android:layout_alignLeft="@+id/request_single_status"
        android:layout_alignStart="@+id/request_single_status" />
</RelativeLayout>