<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/friend_user_img"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/user"
        android:layout_marginLeft="15dp" />

    <TextView
        android:text="DisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:id="@+id/friend_name"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignTop="@+id/friend_user_img"
        android:layout_toRightOf="@+id/friend_user_img"
        android:layout_toEndOf="@+id/friend_user_img" />

    <TextView
        android:text="User Defualt Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/request_single_status"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/friend_name"
        android:layout_alignLeft="@+id/friend_name"
        android:layout_alignStart="@+id/friend_name"
        android:layout_marginRight="5dp" />
</RelativeLayout>